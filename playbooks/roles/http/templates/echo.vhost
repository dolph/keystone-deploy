<VirtualHost *:80>
    WSGIScriptAlias / /var/echo/echo.py
    WSGIDaemonProcess echo processes=3 threads=3 display-name=echo
    WSGIProcessGroup echo

    ErrorLog /var/log/apache2/echo.error.log
    LogLevel info
    CustomLog /var/log/apache2/echo.access.log combined

    <Directory /var/echo>
        Order allow,deny
        Allow from all
    </Directory>
</VirtualHost>
